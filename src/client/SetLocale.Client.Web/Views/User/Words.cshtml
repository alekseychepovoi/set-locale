@using SetLocale.Client.Web.Helpers
@model SetLocale.Client.Web.Models.PageModel<SetLocale.Client.Web.Models.WordModel>

@{
    ViewBag.Title = Html.LocalizationString("menu_words_my_words_key_listing");
}

<h3>@ViewBag.Title</h3>
<hr />

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>@Html.LocalizationString("menu_words_my_words_key")</th>
                <th>@Html.LocalizationString("menu_words_my_words_description")</th>
                <th>@Html.LocalizationString("menu_words_my_words_tag")</th>
                <th>@Html.LocalizationString("menu_words_my_words_translated_lang")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td><a href="/word/detail/@item.Key">@item.Key</a></td>
                    <td>@item.Description</td>
                    <td>
                        @foreach (var tag in item.Tags)
                        {
                            <a class="label label-info" href="/tag/detail/@tag.UrlName">@tag.Name</a>
                        }
                    </td>
                    <td>
                        @foreach (var lang in item.Languages)
                        { <img src="@lang.ImageUrl" alt="@lang.Name" />  }
                    </td>
                </tr>
            }

            @{
                if (Model.HasNextPage || Model.HasPreviousPage)
                {
                    <tr>
                        <td colspan="4" align="center">
                            <ul class="pagination">
                                @if (Model.HasPreviousPage)
                                {
                                    <li><a href="~/user/words/@ViewBag.UserId?page=@(Model.Number-1)">&laquo;</a></li>
                                }

                                <li><a href="~/user/words/@ViewBag.UserId?page=@(Model.Number)">@(Model.Number)</a></li>

                                @if (Model.HasNextPage)
                                {
                                    <li><a href="~/user/words/@ViewBag.UserId?page=@(Model.Number+1)">&raquo;</a></li>
                                }
                            </ul>

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
