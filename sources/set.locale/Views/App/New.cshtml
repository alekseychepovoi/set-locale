@model AppModel

@{
    ViewBag.Title = Html.LocalizationString("new_app_title");
}

<div class="row">
    <h3>@ViewBag.Title</h3>
    <hr />
</div>

@Html.Partial("_Msg")

<div class="row">
    <div class="col-md-5">

        <form method="post">
            <div class="form-group">
                <strong>@Html.LocalizationString("app_name")</strong>
                <input id="name" name="name" type="text" class="form-control" value="@Model.Name" required />
            </div>

            <div class="form-group">
                <strong>@Html.LocalizationString("url")</strong>
                <input type="text" class="form-control" name="url" id="url" value="@Model.Url" required />
            </div>

            <div class="form-group">
                <strong>@Html.LocalizationString("description")</strong>
                <input type="text" class="form-control" name="description" id="description" value="@Model.Description" required />
            </div>

            @Html.AntiForgeryToken()

            <input type="submit" value="@Html.LocalizationString("btn_save")" class="btn btn-primary btn-lg" />

        </form>
    </div>
</div>
