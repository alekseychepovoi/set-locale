@model AppModel

@{
    ViewBag.Title = Html.LocalizationString("new_app_title");
}

<div class="panel panel-info">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        
        @Html.Partial("_Msg")

        <div class="row">
            <div class="col-md-5">

                <form method="post">
                    <div class="form-group">
                        <label for="name">@Html.LocalizationString("app_name")</label>
                        <input id="name" name="name" type="text" class="form-control" value="@Model.Name" required />
                    </div>

                    <div class="form-group">
                        <label for="url">@Html.LocalizationString("url")</label>
                        <input id="url" name="url" type="text" class="form-control" value="@Model.Url" required />
                    </div>

                    <div class="form-group">
                        <label for="description">@Html.LocalizationString("description")</label>
                        <input id ="description" name="description" type="text" class="form-control" value="@Model.Description" />
                    </div>

                    @Html.AntiForgeryToken()

                    <input type="submit" value="@Html.LocalizationString("btn_save")" class="btn btn-primary" />

                </form>
            </div>
        </div>

    </div>
</div>
