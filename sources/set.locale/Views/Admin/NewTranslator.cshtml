@model UserModel
@{
    ViewBag.Title = Html.LocalizationString("new_translator_title");
}
<div class="row">
    <h3>@ViewBag.Title</h3>
    <hr />
</div>

@Html.Partial("_Msg")

<div class="row">
    <div class="col-lg-5">

        <form method="post">
            <div class="form-group">
                <strong>@Html.LocalizationString("translator_name")</strong>
                <input id="name" name="name" type="text" class="form-control" value="@Model.Name" required />
            </div>
            <div class="form-group">
                <strong>@Html.LocalizationString("email")</strong>
                <input id="email" name="email" type="text" class="form-control" value="@Model.Email" required />
            </div>

            @Html.AntiForgeryToken()

            <input type="submit" value="@Html.LocalizationString("btn_save")" class="btn btn-primary" />
        </form>

    </div>
</div>