@model UserModel
@{
    ViewBag.Title = Html.LocalizationString("new_translator_title");
}

<div class="panel panel-info">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">

        @Html.Partial("_Msg")

        <div class="row">
            <div class="col-lg-5">

                <form method="post">
                    <div class="form-group">
                        <label for="name">@Html.LocalizationString("translator_name")</label>
                        <input id="name" name="name" type="text" class="form-control" value="@Model.Name" required />
                    </div>
                    <div class="form-group">
                        <label for="email">@Html.LocalizationString("email")</label>
                        <input id="email" name="email" type="text" class="form-control" value="@Model.Email" required />
                    </div>

                    @Html.AntiForgeryToken()

                    <input type="submit" value="@Html.LocalizationString("btn_save")" class="btn btn-primary" />
                </form>

            </div>
        </div>

    </div>
</div>
