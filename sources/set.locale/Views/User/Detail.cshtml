@model UserModel

@{
    ViewBag.Title = Model.Name;
}

<div class="panel panel-info">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">

        @Html.Partial("_Msg")

        <div class="row">
            <div class="col-sm-2 col-md-2">
                <img src="@Model.Email.ToGravatar(200)" alt="@Model.Name" class="img-rounded img-responsive" />
            </div>
            <div class="col-sm-4 col-md-4">
                <p>
                    <i class="glyphicon glyphicon-envelope"></i> @Model.Email
                </p>

                <form method="post" action="/user/passwordreset">
                    <input type="hidden" id="Email" name="Email" value="@Model.Email" required />
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary">@Html.LocalizationString("btn_send_password_reset_link")</button>
                </form>
            </div>
        </div>

    </div>
</div>
