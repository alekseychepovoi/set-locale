@model LoginModel

@{
    ViewBag.Title = Html.Localize("login_view_title");
}

<div class="panel panel-info">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">

        @Html.Partial("_Msg")

        <div class="row">
            <div class="col-md-5">

                <form action="/user/login?ReturnUrl=@Request.QueryString["ReturnUrl"]" method="post">
                    <div class="form-group">
                        <label for="Email">@Html.Localize("email")</label>
                        <input type="email" id="Email" name="Email" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="Password">@Html.Localize("password")</label>
                        <input type="password" id="Password" name="Password" class="form-control" required />
                    </div>

                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-success">@Html.Localize("btn_login")</button>
                    <a style="margin-left: 10px;" href="/user/passwordreset">@Html.Localize("forgot_your_password")</a>

                </form>

            </div>
        </div>

    </div>
</div>
