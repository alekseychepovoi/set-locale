@model PasswordResetModel

@{
    ViewBag.Title = Html.LocalizationString("password_reset_title"); ;
}

<div class="panel panel-info">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">

        @Html.Partial("_Msg")

        <div class="row">
            <div class="col-md-5">

                <form method="post">

                    <div class="form-group">
                        <label for="Email">@Html.LocalizationString("email")</label>
                        <input type="email" id="Email" name="Email" class="form-control" value="@Model.Email" required />
                    </div>

                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn btn-primary">@Html.LocalizationString("btn_send_password_reset_link")</button>

                </form>

            </div>
        </div>

    </div>
</div>

