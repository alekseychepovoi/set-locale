@model PageModel<WordModel>

@{
    ViewBag.Title = string.Format("{0} {1}", Html.LocalizeString("tag_keys_title"), ViewBag.Key);
    Model.PagerUrl = "/tag/detail/" + ViewBag.ID + "?page=";
    var apps = (IEnumerable<AppModel>)ViewBag.Apps;
}

<div class="panel panel-info">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">

        <div class="row">
            @if (User.Identity.IsAuthenticated && Model.Items.Any() && apps.Any())
            {
                <div class="col-md-12">
                    <button class="btn btn-success btn-sm pull-right" data-toggle="modal" data-target="#CopyToMyAppModal">@Html.LocalizeString("btn_copy_words_to_my_app")</button>
                </div>
            }
        </div>

        <div class="row">
            @if (Model.Items != null && Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>@Html.LocalizeString("word_key")</th>
                                <th>@Html.LocalizeString("description")</th>
                                <th>@Html.LocalizeString("tag")</th>
                                <th>@Html.LocalizeString("translated_language")</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td><a href="/word/detail/@item.Id">@item.Key</a></td>
                                    <td>@item.Description</td>
                                    <td>
                                        @foreach (var tag in item.Tags)
                                        {
                                            <a class="label label-warning" href="/tag/detail/@tag.UrlName">@tag.Name</a>
                                        }
                                    </td>
                                    <td>
                                        @foreach (var lang in item.Languages)
                                        { <img src="@lang.ImageUrl" alt="@lang.Name" />  }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        @Html.Partial("_pTablePager")
                    </table>
                </div>
            }
            else
            {
                Model.Msg = "list_item_not_found".Localize();
                Model.IsOk = false;
                @Html.Partial("_Msg")
            }
        </div>

    </div>
</div>


@if (User.Identity.IsAuthenticated)
{
    @section script
    {
        <script>
            var Action = '/Tag/Copy/';
        </script>
        @Html.Partial("_pCopyByModal")
        <script>
            var forceMsg = $('#CopyToMyAppModal .modal-content .modal-footer label');
            forceMsg.append('@Html.LocalizeString("deletes_old_data")');
        </script>
    }
}
